<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <root>
      <level value="INFO" />
      <appender-ref ref="console" />
      <appender-ref ref="DebugFile" />
      <appender-ref ref="ErrorFile" />
    </root>
    
    <appender name="console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
      </layout>
    </appender>

    <appender name="DebugFile" type="log4net.Appender.RollingFileAppender">
      <file value="C:/PeqNP.Dirs/AppLogs/IntFact.Comms.Debug.log" />
      <maximumFileSize value="2048MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date] [%thread] [%-5p] [%d{hh:mm:ss}] %message%newline" />
      </layout>
    </appender>

    <appender name="ErrorFile" type="log4net.Appender.RollingFileAppender">
      <file value="C:/PeqNP.Dirs/AppLogs/IntFact.Comms.Error.log" />
      <maximumFileSize value="2048MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date] [%thread] [%-5p] [%d{hh:mm:ss}] %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR"/>
        <levelMax value="FATAL"/>
      </filter>
    </appender>

  </log4net>
</configuration>
